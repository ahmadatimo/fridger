<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Delete_Menu">

    <TextView
        android:id="@+id/removeHelloUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFBFB"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:text="Hello, Amirhossein" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginLeft="-210dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/edu_med"
        android:text="first pick a category to delete" />

    <androidx.cardview.widget.CardView
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:layout_marginLeft="-295dp"
        android:layout_marginTop="225dp"
        app:cardBackgroundColor="#B5D9D9D9"
        app:cardCornerRadius="20dp" >

        <ImageButton
            android:id="@+id/removeFruits"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00D9D9D9"
            android:contextClickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/fruits" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="90dp"
            android:text="Fruits"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="225dp"
        app:cardBackgroundColor="#B5D9D9D9"
        app:cardCornerRadius="15dp" >

        <ImageButton
            android:id="@+id/removeVegetables"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00D9D9D9"
            android:contextClickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vegetables" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:textSize="20dp"
            android:text="Vegetables"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:layout_marginLeft="-350dp"
        android:layout_marginTop="425dp"
        app:cardBackgroundColor="#B5D9D9D9"
        app:cardCornerRadius="20dp" >

        <ImageButton
            android:id="@+id/removeMeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00D9D9D9"
            android:contextClickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/meat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:text="Meat"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="425dp"
        app:cardBackgroundColor="#B5D9D9D9"
        app:cardCornerRadius="20dp" >

        <ImageButton
            android:id="@+id/removeLiquid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00D9D9D9"
            android:contextClickable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/water"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="85dp"
            android:text="Liquids"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-325dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="#E35959"
        android:text="go back"
        android:textSize="50dp" />

</LinearLayout>