<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".About">


    <TextView
        android:id="@+id/fridger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Fridger\n_______________"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="The purpose of this program is to notify its users that there are some items in the fridge nearly expired, because some people forget about the items and their expiration dates in the fridge."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32dp"
        android:text="ok" />
    />
</LinearLayout>